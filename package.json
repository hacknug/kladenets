{
  "name": "kladenets",
  "version": "1.1.3",
  "description": "Future-proof native CSS variables in your :root",
  "main": "kladenets.css",
  "scripts": {
    "test": "npm-run-all --parallel build",
    "build": "npm-run-all --parallel build:*",
    "build:sass": "sass src/kladenets.scss dist/kladenets.css --no-source-map",
    "serve:css": "nodemon --watch src/ --ext scss --exec \"npm-run-all serve:sass\"",
    "serve:sass": "sass src/kladenets.scss dist/kladenets.css",
    "serve": "npm-run-all --parallel serve:*",
    "release": "release-it"
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sparanoid@github.com/sparanoid/kladenets.git"
  },
  "keywords": [
    "css"
  ],
  "author": "Tunghsiao Liu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sparanoid/kladenets/issues"
  },
  "homepage": "https://github.com/sparanoid/kladenets#readme",
  "devDependencies": {
    "nodemon": "^2.0.9",
    "npm-run-all": "^4.1.5",
    "release-it": "14.10.0",
    "sass": "^1.35.1"
  }
}
